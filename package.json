{
  "name": "code-roast",
  "version": "1.0.0",
  "description": "website for reviewing and roasting your code with AI tools.",
  "scripts": {
    "grant": "chmod +x ./scripts/development/*",
    "init:dev": "./scripts/development/minikube-init.sh",
    "serve:dev": "./scripts/development/minikube-apply.sh",
    "state:dev": "./scripts/development/minikube-statuses.sh",
    "proxy:up": "minikube tunnel --alsologtostderr",
    "dashboard": "minikube dashboard --port=8888 --url",
    "hotreload": "skaffold dev",
    "lint:frontend": "cd apps/frontend && npm run lint",
    "lint:backend": "cd apps/backend && python -m ruff check ."
  },
  "keywords": [
    "review",
    "code",
    "roast",
    "ai",
    "chatgpt"
  ],
  "author": "anikeev-savelij & mrkbbs",
  "license": "ISC",
  "type": "commonjs"
}
